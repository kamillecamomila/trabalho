		    	$('#main-navigation li.menu-item-has-children > a').click(function (e) {
		    		if(!$(this).parent().hasClass('sub-menu-lvl-2') && !$(this).parent().hasClass('sub-menu-lvl-3')) {
						e.preventDefault();
						$(this).parent().addClass('open');
						a = true;
					}
